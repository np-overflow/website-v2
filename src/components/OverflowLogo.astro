---
import { Image } from "astro:assets";

import DarkLogo from "../images/logos/dark.svg";
import LightLogo from "../images/logos/light.svg";
---

<Image
  format="webp"
  class="OverflowLogo__dark"
  src={DarkLogo}
  alt="Overflow logo"
  height={48}
/>
<Image
  format="webp"
  class="OverflowLogo__light"
  src={LightLogo}
  alt="Overflow logo"
  height={48}
/>

<style>
  .OverflowLogo__dark {
    display: none;
  }

  .OverflowLogo__light {
    display: block;
  }

  :global(.dark) .OverflowLogo__dark {
    display: block;
  }

  :global(.dark) .OverflowLogo__light {
    display: none;
  }
</style>
